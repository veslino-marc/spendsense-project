<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_bg">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_spendsense"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SpendSense"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_bg"
            android:layout_marginStart="10dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/tabCashIn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cash In"
                    android:textColor="@color/dark_bg"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/tab_inactive"
                    android:layout_marginEnd="5dp" />

                <Button
                    android:id="@+id/tabCashOut"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cash Out"
                    android:textColor="@color/dark_bg"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/tab_active"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <!-- Amount Display Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_green"
                android:orientation="vertical"
                android:padding="25dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Amount"
                    android:textSize="14sp"
                    android:textColor="@color/dark_bg"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:hint="â‚±0.00"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_bg"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColorHint="@color/dark_bg" />
            </LinearLayout>

            <!-- Category Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_bg"
                android:layout_marginBottom="10dp" />

            <GridLayout
                android:id="@+id/categoryGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Food"
                    android:textColor="@color/dark_bg"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/category_item_bg"
                    android:layout_margin="8dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Transport"
                    android:textColor="@color/dark_bg"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/category_item_bg"
                    android:layout_margin="8dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:text="Shopping"
                    android:textColor="@color/dark_bg"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/category_item_bg"
                    android:layout_margin="8dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Bills"
                    android:textColor="@color/dark_bg"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/category_item_bg"
                    android:layout_margin="8dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="Entertainment"
                    android:textColor="@color/dark_bg"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/category_item_bg"
                    android:layout_margin="8dp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:text="Others"
                    android:textColor="@color/dark_bg"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/category_item_bg"
                    android:layout_margin="8dp" />
            </GridLayout>

            <!-- Date Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_field_bg"
                android:padding="12dp"
                android:hint="MM / DD / YYYY"
                android:textColor="@color/dark_bg"
                android:textColorHint="@color/placeholder"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="20dp" />

            <!-- Description Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description (Optional)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_bg"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/edit_text_field_bg"
                android:padding="12dp"
                android:hint="Add a note..."
                android:textColor="@color/dark_bg"
                android:textColorHint="@color/placeholder"
                android:gravity="top"
                android:layout_marginBottom="30dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveTransaction"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Save Expense"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_save_bg"
                android:layout_marginBottom="15dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:scaleType="centerInside"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/navTrack"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_track"
            android:scaleType="centerInside"
            android:contentDescription="Track"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/navAdd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add"
            android:scaleType="centerInside"
            android:contentDescription="Add"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/navRecord"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_record"
            android:scaleType="centerInside"
            android:contentDescription="Record"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>

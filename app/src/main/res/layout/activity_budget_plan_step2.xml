<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_bg">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:padding="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_spendsense"
            android:contentDescription="Logo"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_bg"
            android:layout_weight="2"
            android:gravity="center" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:layout_weight="1"
            android:gravity="end" />
    </LinearLayout>

    <!-- Main Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set up a plan 2"
                android:textSize="14sp"
                android:textColor="@color/placeholder"
                android:layout_marginBottom="20dp" />

            <!-- Main Content Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="30dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/logo_spendsense"
                        android:contentDescription="Logo" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SpendSense"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_bg"
                        android:layout_marginStart="10dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Settings" />
                </LinearLayout>

                <!-- Divider Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/primary_green"
                    android:layout_marginBottom="20dp" />

                <!-- Section Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allotted Budget"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_bg"
                    android:gravity="center"
                    android:layout_marginBottom="30dp" />

                <!-- Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Input Budget"
                    android:textSize="14sp"
                    android:textColor="@color/dark_bg"
                    android:layout_marginBottom="10dp" />

                <!-- Budget Input -->
                <EditText
                    android:id="@+id/budgetInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:textSize="16sp"
                    android:textColor="@color/dark_bg"
                    android:textColorHint="@color/placeholder"
                    android:background="@drawable/input_background"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Next"
            android:textColor="@color/dark_bg"
            android:textStyle="bold"
            android:background="@drawable/budget_button_background"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Back"
            android:textColor="@color/dark_bg"
            android:textStyle="bold"
            android:background="@drawable/button_background" />
    </LinearLayout>
</LinearLayout>

